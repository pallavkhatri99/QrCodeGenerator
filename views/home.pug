block home
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Qr Code Generator 
        link(rel='stylesheet', href='page.css')
        //link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200')
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js")
        script(src='common.js')
    body(style="padding:0px; margin:0px;")
        .nav(style="background-color: darkcyan; display: flex; align-items: center; gap: 10px; height:120px;padding-left:10px;") 
            img(src="qrcode.jpg", alt="qrcode", style="width:80px;border-bottom-right-radius: 35px;border-top-left-radius: 35px;")
            h1(style="color:white;") Free Qr Code Generator
        .container(style="margin: 20px 50px 0px 50px;font-size: 20px;")
            .opt-list(style="display:flex; gap:30px;justify-content: center;")
                .opt-btn
                    a(href='url') URL
                .opt-btn
                    a(href='upi') UPI
                .opt-btn 
                    a(href='text') Text
                .opt-btn 
                    a(href='email') Email
                .opt-btn 
                    a(href='sms') SMS
                .opt-btn 
                    a(href='location') Location
                .opt-btn 
                    a(href='facebook') Facebook
                .opt-btn 
                    a(href='twitter') Twitter
                .opt-btn 
                    a(href='youtube') Youtube
        .box(style="margin: 0px 80px 10px 80px;background-color:#adcfcf;")
            block box
            .btn-box
                button(class='btn',id='generate') Generate
                button(class='btn',id='reset') Reset
        
        .img-box 
            h2 Your Generated QR Code
            .imgQR(id='imgqr')
            a(class='btn',id="download",target="_blank") Download


